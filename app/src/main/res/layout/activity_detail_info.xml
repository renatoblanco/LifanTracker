<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="Escanee el VIN">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:contextClickable="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/x60_landscape" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="110dp"
            android:baselineAligned="false"
            android:measureWithLargestChild="false"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:textAlignment="textStart">

            <TextView
                android:id="@+id/VIN"
                android:layout_width="253dp"
                android:layout_height="35dp"
                android:layout_gravity="left|top"
                android:layout_marginTop="8dp"
                android:autoText="false"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:shadowColor="#c7b7b7"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/engine"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_factura"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/color"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/proceso"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fechaprod"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:shadowColor="#c7b7b7"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold|normal"
                android:theme="@style/Base.TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/txt_lote"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:shadowColor="#c7b7b7"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold|normal"
                android:theme="@style/Base.TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/txt_key"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:shadowColor="#c7b7b7"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold|normal"
                android:theme="@style/Base.TextAppearance.AppCompat" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="109dp"
        android:layout_height="200dp"
        android:layout_gravity="right"
        android:layout_weight="300"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:id="@+id/txrt_nroprod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="145dp"
            android:text="N°"
            android:shadowColor="#8a6603"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1.8"
            android:textColor="@color/colorAccent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="109dp"
        android:layout_height="152dp"
        android:layout_gravity="bottom|right"
        android:layout_weight="300"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/tracking"
            android:src="@drawable/ic_tracking"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:onClick="@string/abc_search_hint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="112dp"
        android:layout_height="329dp"
        android:layout_gravity="bottom|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="VIN"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_motor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:text="Motor"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_factura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:autoText="false"
            android:text="Factura"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:autoText="false"
            android:text="Color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_proceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:autoText="false"
            android:text="Proceso"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_año"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:autoText="false"
            android:text="Año"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_lote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:autoText="false"
            android:text="Lote"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:autoText="false"
            android:text="Llave"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />
    </LinearLayout>

    <include
        android:id="@+id/inc_toolbar"
        layout="@layout/toolbar"
        android:layout_width="fill_parent"></include>


</FrameLayout>





