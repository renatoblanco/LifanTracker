<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="Escanee el VIN">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="bottom"
            android:src="@drawable/x60_landscape"
            android:contextClickable="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="110dp"
            android:baselineAligned="false"
            android:measureWithLargestChild="false"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:textAlignment="textStart">

            <TextView
                android:id="@+id/VIN"
                android:layout_width="253dp"
                android:layout_height="35dp"
                android:layout_gravity="left|top"
                android:layout_marginTop="8dp"
                android:autoText="false"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:shadowColor="#c7b7b7"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/engine"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modelo"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/color"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/proceso"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fechaprod"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:shadowColor="#c7b7b7"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold|normal"
                android:theme="@style/Base.TextAppearance.AppCompat"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/txt_lote"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:shadowColor="#c7b7b7"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold|normal"
                android:theme="@style/Base.TextAppearance.AppCompat"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txt_key"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:elegantTextHeight="true"
                android:hint="No disponible"
                android:shadowColor="#c7b7b7"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:textSize="18dp"
                android:textStyle="bold|normal"
                android:theme="@style/Base.TextAppearance.AppCompat"
                android:layout_marginTop="2dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="109dp"
        android:layout_height="458dp"
        android:layout_gravity="right"
        android:layout_weight="300"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageButton
            android:id="@+id/detail"
            android:layout_width="100dp"
            android:layout_height="208dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="false"
            android:src="@drawable/number"
            android:visibility="visible"
            android:paddingLeft="10dp"
            android:tintMode="src_in"
            android:background="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="112dp"
        android:layout_height="329dp"
        android:layout_gravity="bottom|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="VIN"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_motor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:text="Motor"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_factura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:autoText="false"
            android:text="Factura"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:autoText="false"
            android:text="Color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_proceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:autoText="false"
            android:text="Proceso"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_año"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:autoText="false"
            android:text="Año"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_lote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:autoText="false"
            android:text="Lote"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lbl_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:autoText="false"
            android:text="Llave"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />
    </LinearLayout>

    <include
        android:id="@+id/inc_toolbar"
        layout="@layout/toolbar"
        android:layout_width="fill_parent"></include>


</FrameLayout>





