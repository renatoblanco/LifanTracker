<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="Escanee el VIN">

    <LinearLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left|center_vertical"
        android:weightSum="1">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            tools:context="uy.com.lifan.lifantracker.MapsActivity" />


        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="306dp"
            android:orientation="vertical"
            android:layout_gravity="left|bottom">

            <TextView
                android:id="@+id/VIN"
                android:layout_width="253dp"
                android:layout_height="40dp"
                android:layout_gravity="left|top"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="8dp"
                android:textColor="#070707"
                android:singleLine="true"
                android:theme="@style/Base.TextAppearance.AppCompat"
                android:shadowColor="#c7b7b7"
                android:elegantTextHeight="true"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:autoText="false"
                android:textAlignment="textStart" />


            <TextView
                android:id="@+id/engine"
                android:layout_width="253dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="0dp"
                android:layout_margin="0dp"
                android:singleLine="true"
                android:layout_marginLeft="6dp"
                android:elegantTextHeight="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#4e4646"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/modelo"
                android:layout_width="253dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:elegantTextHeight="true"
                android:textStyle="bold|normal"
                android:textSize="18dp"
                android:textColor="#4e4646"
                android:layout_marginLeft="6dp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/color"
                android:layout_width="253dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:elegantTextHeight="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#4e4646"
                android:layout_marginLeft="6dp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/proceso"
                android:layout_width="253dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:elegantTextHeight="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#4e4646"
                android:layout_marginLeft="6dp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/fechaprod"
                android:layout_width="253dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4e4646"
                android:singleLine="true"
                android:theme="@style/Base.TextAppearance.AppCompat"
                android:shadowColor="#c7b7b7"
                android:elegantTextHeight="true"
                android:textStyle="bold|normal"
                android:textSize="18dp"
                android:layout_marginLeft="6dp"
                android:textAlignment="textStart" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="109dp"
        android:layout_height="375dp"
        android:layout_gravity="right"
        android:layout_weight="300">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:id="@+id/detail"
            android:layout_gravity="center_vertical|bottom"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_info"
            android:adjustViewBounds="true"
            android:transitionName="@string/abc_capital_on"
            android:visibility="visible" />
    </LinearLayout>

    <include
        android:id="@+id/inc_toolbar"
        layout="@layout/toolbar"
        android:layout_width="fill_parent"></include>


</FrameLayout>





